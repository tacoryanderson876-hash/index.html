    <script>
        (function() {
            'use strict';
            
            let debugMode = false;
            let lastWasHigh = false;
            let currentDiceColor = '#ffffff';
            let currentPipColor = '#333333';

            function init() {
                const dice = document.getElementById('dice');
                const rollButton = document.getElementById('rollButton');
                const resultDisplay = document.getElementById('result');
                const debugSwitch = document.getElementById('debugSwitch');
                const settingsBtn = document.getElementById('settingsBtn');
                const settingsModal = document.getElementById('settingsModal');
                const closeBtn = document.getElementById('closeBtn');
                const overlay = document.getElementById('overlay');

                function loadSettings() {
                    try {
                        const saved = JSON.parse(localStorage.getItem('diceSettings') || '{}');
                        
                        if (saved.debugMode) {
                            debugSwitch.checked = true;
                            debugMode = true;
                        }
                        
                        if (saved.background) {
                            document.body.style.background = saved.background;
                        }
                        
                        if (saved.diceColor) {
                            currentDiceColor = saved.diceColor;
                            dice.style.background = currentDiceColor;
                        }
                        
                        if (saved.pipColor) {
                            currentPipColor = saved.pipColor;
                            updatePipColors();
                        }
                    } catch (e) {
                        console.log('No saved settings');
                    }
                    
                    updateDice(dice, 1);
                }

                function saveSettings() {
                    try {
                        const settings = {
                            debugMode: debugMode,
                            background: document.body.style.background,
                            diceColor: currentDiceColor,
                            pipColor: currentPipColor
                        };
                        localStorage.setItem('diceSettings', JSON.stringify(settings));
                    } catch (e) {
                        console.log('Could not save settings');
                    }
                }

                debugSwitch.addEventListener('change', function(e) {
                    debugMode = e.target.checked;
                    saveSettings();
                });

                settingsBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    settingsModal.classList.add('open');
                    overlay.classList.add('active');
                });

                closeBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    closeSettings();
                });

                overlay.addEventListener('click', function() {
                    closeSettings();
                });

                function closeSettings() {
                    settingsModal.classList.remove('open');
                    overlay.classList.remove('active');
                }

                document.getElementById('bgOptions').addEventListener('click', function(e) {
                    if (e.target.classList.contains('color-option')) {
                        document.querySelectorAll('#bgOptions .color-option').forEach(function(opt) {
                            opt.classList.remove('selected');
                        });
                        e.target.classList.add('selected');
                        const bg = e.target.getAttribute('data-bg');
                        document.body.style.background = bg;
                        saveSettings();
                    }
                });

                document.getElementById('diceOptions').addEventListener('click', function(e) {
                    if (e.target.classList.contains('color-option')) {
                        document.querySelectorAll('#diceOptions .color-option').forEach(function(opt) {
                            opt.classList.remove('selected');
                        });
                        e.target.classList.add('selected');
                        currentDiceColor = e.target.getAttribute('data-color');
                        dice.style.background = currentDiceColor;
                        saveSettings();
                    }
                });

                document.getElementById('customDiceColor').addEventListener('change', function(e) {
                    currentDiceColor = e.target.value;
                    dice.style.backgrou
